{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": false,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2020.Promise"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
